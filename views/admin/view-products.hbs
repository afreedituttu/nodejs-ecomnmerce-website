<section>
    <div class="container">
        <table class="table">
  <thead>
    <tr>
      <th scope="col">#Number</th>
      <th scope="col">name</th>
      <th scope="col">category</th>
      <th scope="col">price</th>
      <th scope="col">Image</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.name}}</td>
      <td>{{this.category}}</td>
      <td>{{this.price}}</td>
      <td><img src="/product-images/{{this._id}}.jpg" style="min-width:80px;min-height:80px;max-width:80px;max-height:80px;"></td>
      <td>
        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
        <a href="/admin/delete-product?id={{this._id}}" class="btn btn-danger" onclick="return confirm('do you want to delete {{this.name}}')">delete</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
  
</table>
<a href="/admin/add-products" class="btn btn-success ml-auto">Add Products</a>
    </div>
</section>