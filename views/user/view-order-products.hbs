    <div class="product-cntnr">
        <div class="row">
              
            {{#each products}}
            <div class="col-md-3 p-3">
                <div class="card" style="width: 18rem; height: 28rem;">
                    <img src="/product-images/{{this.item}}.jpg" style="width: 18rem;height:18rem;" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{this.products.name}}</h5>
                        <p class="card-text">{{this.products.discription}}</p>
                        <h6 class="card-title">{{this.products.price}}</h6>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>